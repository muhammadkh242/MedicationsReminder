<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back"

    android:layout_height="match_parent"
    tools:context=".medicationsmanaging.view.MedicationsFragment"
    android:orientation="vertical">
    <include layout="@layout/medications_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"/>

    <TextView
        android:id="@+id/activeTxt"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:text="@string/active_meds"
        android:layout_width="match_parent"
        android:layout_weight="0.06"
        android:layout_height="0dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.42"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_weight="0.02"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:text="@string/add_med"
            android:layout_marginStart="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="#808080"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>