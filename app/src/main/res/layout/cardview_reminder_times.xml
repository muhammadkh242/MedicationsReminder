<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reminder_times_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#3B7ADA"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtMedicationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder_times"
                android:textColor="#00255E"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="5dp"
                app:layout_constraintVertical_bias="0.0"
                />

            <Switch
                android:checked="false"
                app:layout_constraintBaseline_toBaselineOf="@id/img_cardview_reminder_times_show"
                app:layout_constraintTop_toTopOf="@id/img_cardview_reminder_times_show"
                app:layout_constraintStart_toEndOf="@id/txtMedicationName"
                app:layout_constraintEnd_toStartOf="@id/img_cardview_reminder_times_show"
                app:layout_constraintHorizontal_bias="0.9"
                android:id="@+id/switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/img_cardview_reminder_times_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                app:layout_constraintStart_toEndOf="@id/txtMedicationName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtMedicationName"
                app:layout_constraintHorizontal_bias="1.0"
                app:srcCompat="@android:drawable/arrow_down_float"
                app:tint="#7E918F" />

            <TextView
                android:id="@+id/txtTakeAsNeeded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtMedicationName"
                app:layout_constraintStart_toStartOf="@id/txtMedicationName"
                android:text="@string/take_as_needed"
                >

            </TextView>

           <TextView
               android:id="@+id/txtDay"
               app:layout_constraintTop_toBottomOf="@id/txtTakeAsNeeded"
               app:layout_constraintStart_toStartOf="@id/txtTakeAsNeeded"
               android:text="@string/one_day"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

           </TextView>

            <Spinner
                android:id="@+id/spinner"
                app:layout_constraintTop_toTopOf="@id/txtDay"
                app:layout_constraintStart_toEndOf="@id/txtDay"
                app:layout_constraintEnd_toEndOf="@id/img_cardview_reminder_times_show"
                app:layout_constraintHorizontal_bias="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>
               <TextView
                   app:layout_constraintTop_toBottomOf="@id/txtDay"
                   app:layout_constraintStart_toStartOf="@id/txtDay"
                   android:id="@+id/txtTime"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="6dp"
                   android:layout_marginVertical="5dp"
                   android:text="@string/time"
                  >

               </TextView>

               <TextView
                   android:id="@+id/txtQuantityDrug"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/take"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.979"
                   app:layout_constraintStart_toEndOf="@id/txtTime"
                   app:layout_constraintTop_toTopOf="@id/txtTime">

               </TextView>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/cardvie_reminder_times_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="spinner,txtDay,txtQuantityDrug,txtTime"
                tools:visibility="gone"
                 />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>