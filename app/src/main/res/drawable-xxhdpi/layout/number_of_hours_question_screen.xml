<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Every number of hours"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/view_q4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_q4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/top_corner_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.7" >


        <TextView
            android:id="@+id/txtOnceDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/once_day"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_q4"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@id/txtOnceDay"
            app:layout_constraintTop_toBottomOf="@id/txtOnceDay"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/txtTwoHour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Every 2 hours"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="@id/line1"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@id/txtTwoHour"
            app:layout_constraintTop_toBottomOf="@id/txtTwoHour"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/txtThreeHour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Every 3hours"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintStart_toStartOf="@id/line2"
            app:layout_constraintTop_toTopOf="@id/line2"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/line3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@id/txtThreeHour"
            app:layout_constraintTop_toBottomOf="@id/txtThreeHour"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/txtFourHour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Every 4 hours"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintStart_toStartOf="@id/line3"
            app:layout_constraintTop_toTopOf="@id/line3"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/line4"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@id/txtFourHour"
            app:layout_constraintTop_toBottomOf="@id/txtFourHour"
            app:layout_constraintWidth_percent="0.8" />


        <TextView
            android:id="@+id/txtSixHour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Every 6 hours"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintStart_toStartOf="@id/line4"
            app:layout_constraintTop_toTopOf="@id/line4"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/line5"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@id/txtSixHour"
            app:layout_constraintTop_toBottomOf="@id/txtSixHour"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/txtEightHour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Every eight hours"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintStart_toStartOf="@id/line5"
            app:layout_constraintTop_toTopOf="@id/line5"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/line6"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@id/txtEightHour"
            app:layout_constraintTop_toBottomOf="@id/txtEightHour"
            app:layout_constraintWidth_percent="0.8" />


        <TextView
            android:id="@+id/txtTwelveHour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Every 12 hours"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.024"
            app:layout_constraintStart_toStartOf="@id/line6"
            app:layout_constraintTop_toTopOf="@id/line6"
            app:layout_constraintWidth_percent="0.8" />

        <View
            android:id="@+id/line7"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@id/txtTwelveHour"
            app:layout_constraintTop_toBottomOf="@id/txtTwelveHour"
            app:layout_constraintWidth_percent="0.8" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/back"
            android:text="@string/next"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/view_q4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/view_q4"
            app:layout_constraintTop_toBottomOf="@id/line7"
            app:layout_constraintVertical_bias="0.83" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>